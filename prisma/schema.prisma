// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  subjects      Subject[]
  streaks       Streak[]
  studySessions StudySession[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Subject {
  id          String   @id @default(cuid())
  title       String
  slug        String   // URL-friendly name
  description String?
  overview    String?  // AI-generated subject overview
  overviewGeneratedAt DateTime? // When overview was last generated
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  chapters    Chapter[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, slug]) // Slug is unique per user
}

model Chapter {
  id          String   @id @default(cuid())
  title       String
  slug        String   // URL-friendly name
  subjectId   String
  subject     Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  resources   Resource[]
  tasks       Task[]
  intuition   String?  // Markdown content for 'Concept Intuition'
  isCompleted Boolean  @default(false)
  taskFlowTransitions String?  // JSON string of AI-generated task transitions

  @@unique([subjectId, slug]) // Slug is unique per subject
}

model Resource {
  id        String   @id @default(cuid())
  title     String
  type      String   // PDF, VIDEO
  url       String
  chapterId String
  chapter   Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
}

model Task {
  id          String   @id @default(cuid())
  description String
  isCompleted Boolean  @default(false)
  chapterId   String
  chapter     Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
}

model StudySession {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date      DateTime @default(now())
  duration  Int      // in minutes
}

model Streak {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  currentStreak Int  @default(0)
  lastStudyDate DateTime?
}
